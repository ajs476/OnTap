<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs477.ontap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:label="OnTap: Login &amp; Registration"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountCreation1Activity"
            android:label="OnTap: Account Creation 1/2"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AccountCreation2Activity"
            android:label="OnTap: Account Creation 2/2"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="OnTap: Home"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AccountManagementActivity"
            android:label="OnTap: Account Management"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AccountDeletionActivity"
            android:label="OnTap: Account Deletion"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MyTabActivity"
            android:label="OnTap: MyTab &amp; Orders"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
